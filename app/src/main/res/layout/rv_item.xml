<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/gapSmall"
    android:layout_marginEnd="@dimen/gapSmall"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/gapMedium">

        <LinearLayout
            android:id="@+id/ll_item_top"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/gapSmall"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasien No : "
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="001"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Status Pasien : "
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sakit"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:id="@+id/v_item_top"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="@dimen/gapSmall"
            android:background="@color/colorPrimary"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2">
            <TableRow
                android:layout_marginBottom="@dimen/gapExtraSmall">
                <TextView
                    android:text="Nama Pasien"
                    android:textSize="16sp"/>
                <TextView
                    android:text="@string/char_colon"
                    android:paddingStart="@dimen/gapMedium"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_item_nama"
                    tools:text="Bagoy"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="@dimen/gapExtraSmall">
                <TextView
                    android:text="Usia"
                    android:textSize="16sp"/>
                <TextView
                    android:text="@string/char_colon"
                    android:paddingStart="@dimen/gapMedium"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_item_usia"
                    tools:text="18 Tahun"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="@dimen/gapExtraSmall">
                <TextView
                    android:text="Jenis Kelamin"
                    android:textSize="16sp"/>
                <TextView
                    android:text="@string/char_colon"
                    android:paddingStart="@dimen/gapMedium"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_item_jk"
                    tools:text="Laki-Laki"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="@dimen/gapExtraSmall">
                <TextView
                    android:text="Provinsi Domisili"
                    android:textSize="16sp"/>
                <TextView
                    android:text="@string/char_colon"
                    android:paddingStart="@dimen/gapMedium"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_item_provinsi"
                    tools:text="Jakarta"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>